  <video class="ykPlayer" src=<%= @videoUrl %> poster=<%= @result["data"]["info"]["roominfo"]["pictures"]["img"]?@result["data"]["info"]["roominfo"]["pictures"]["img"]:@failedImg %> playsinline controls="controls">
