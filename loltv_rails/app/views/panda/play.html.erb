      <p class="ykUpName">
        <%= @result["data"]["info"]["hostinfo"]["name"] %>
      </p>
      <p class="ykPost">
				房间号：<%= @result["data"]["info"]["roominfo"]["id"] %>
      </p>
    </div>
  </div>

